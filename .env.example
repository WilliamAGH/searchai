# Convex Configuration
VITE_CONVEX_URL=https://your-convex-deployment.convex.cloud
CONVEX_SITE_URL=https://your-convex-deployment.convex.site
CONVEX_OPENAI_BASE_URL=https://your-proxy.convex.site/openai-proxy
RESEND_BASE_URL=https://your-proxy.convex.site/resend-proxy

# API Keys (get from respective services)
CONVEX_OPENAI_API_KEY=your-openai-api-key
CONVEX_RESEND_API_KEY=your-resend-api-key
OPENROUTER_API_KEY=your-openrouter-api-key
SERP_API_KEY=your-serp-api-key

# JWT Configuration
JWKS={"keys":[{"use":"sig","e":"AQAB","kty":"RSA","n":"your-jwks-key"}]}
JWT_PRIVATE_KEY=-----BEGIN PRIVATE KEY----- your-private-key -----END PRIVATE KEY-----

# Email Service (for local development)
MAILPIT_HOST=https://mailpit.your-domain.net
MP_SEND_API_AUTH=your-mailpit-auth-token

# Site Configuration
SITE_URL=https://your-domain.com

# Feature Flags
VITE_FEATURE_RACE_CONDITION_FIX=true  # Enable race condition fixes for message chaining
VITE_FEATURE_TELEMETRY_ENABLED=false  # Enable telemetry and monitoring
VITE_FEATURE_ENHANCED_FOLLOWUP=true   # Enable enhanced follow-up prompt features