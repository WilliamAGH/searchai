{
  "name": "searchai-io",
  "private": true,
  "version": "0.1.0",
  "description": "AI-powered search application",
  "type": "module",
  "homepage": "https://search-ai.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WilliamAGH/searchai-io.git"
  },
  "bugs": {
    "url": "https://github.com/WilliamAGH/searchai-io/issues"
  },
  "author": "William Callahan",
  "license": "UNLICENSED",
  "keywords": [
    "search",
    "ai",
    "convex",
    "react"
  ],
  "scripts": {
    "validate:quick": "oxlint && tsc -p . --noEmit --pretty false && tsc -p convex --noEmit --pretty false && npm run -s test",
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "build": "vite build",
    "preview": "vite preview --strictPort --port 4173",
    "lint": "oxlint --react-plugin --jsx-a11y-plugin --promise-plugin --vitest-plugin --react-perf-plugin",
    "lint:fix": "oxlint --react-plugin --jsx-a11y-plugin --promise-plugin --vitest-plugin --react-perf-plugin --fix",
    "typecheck": "tsc -p . --noEmit --pretty false && tsc -p convex --noEmit --pretty false",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,cjs,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mjs,cjs,json,css,md}\"",
    "validate": "npm-run-all --parallel lint typecheck format:check lint:convex-imports lint:convex-types --sequential test:single build",
    "clean": "rm -rf node_modules/.cache node_modules/.tmp dist .turbo && echo '✅ Cleaned build caches'",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json && echo '✅ Cleaned everything - run npm install'",
    "clean:vscode": "rm -rf ~/Library/Caches/typescript/* ~/Library/Application\\ Support/Code/Cache/* ~/Library/Application\\ Support/Code/CachedData/* 2>/dev/null || true && echo '✅ Cleaned VSCode caches - restart VSCode'",
    "test": "vitest run --reporter=dot --pool=forks",
    "test:vmforks": "vitest run --reporter=dot --pool=vmForks --poolOptions.vmForks.singleFork --coverage.enabled=false",
    "test:single": "vitest run --reporter=dot --pool=forks --poolOptions.forks.singleFork --coverage.enabled=false",
    "test:ci": "vitest run --reporter=dot --pool=vmForks --poolOptions.vmForks.singleFork",
    "test:watch": "vitest",
    "test:vitest": "vitest run",
    "postinstall": "npm run playwright:install",
    "playwright:install": "npx playwright install chromium",
    "playwright:update": "npm run playwright:install -- --with-deps",
    "test:playwright": "playwright test",
    "test:all": "npm-run-all --sequential test:vitest test:playwright",
    "test:chat": "vitest src/lib/utils/__tests__/chatValidation.test.ts",
    "test:integration:chat": "playwright test tests/integration/chat-message-chaining.test.ts",
    "test:integration": "playwright test --config=playwright-integration.config.ts",
    "test:smoke": "playwright test -g smoke --reporter=line",
    "test:smoke:proxy": "PLAYWRIGHT_RUNTIME=proxy playwright test -g smoke --reporter=line",
    "prepare": "husky",
    "lint:convex-imports": "node scripts/check-convex-imports.cjs",
    "lint:convex-types": "node scripts/lint-convex-types.mjs"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.80",
    "@fastify/rate-limit": "^10.3.0",
    "@headlessui/react": "^2.2.7",
    "@openai/agents": "^0.1.11",
    "@openai/agents-core": "0.1.11",
    "@openai/agents-openai": "0.1.11",
    "@tailwindcss/container-queries": "^0.1.1",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "convex": "^1.25.4",
    "fastify": "^5.6.1",
    "lucide-react": "^0.539.0",
    "openai": "^5.12.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.12.0",
    "react-swipeable": "^7.0.2",
    "rehype-sanitize": "^6.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "3.3.0",
    "terser": "5.40.0",
    "zod": "^3.25.76",
    "uuidv7": "^1.0.2"
  },
  "devDependencies": {
    "@playwright/test": "1.56.1",
    "@testing-library/react": "^16.0.0",
    "@types/node": "24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "~10",
    "convex-test": "^0.0.38",
    "dotenv": "16.5.0",
    "esbuild": "0.25.4",
    "glob": "^11.1.0",
    "globals": "^15.15.0",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "15.5.2",
    "npm-run-all": "^4.1.5",
    "oxlint": "1.11.1",
    "postcss": "~8",
    "prettier": "^3.5.3",
    "tailwindcss": "~3",
    "tsx": "^4.20.3",
    "typescript": "5.9.2",
    "vite": "6.4.1",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "undici": "^7.19.0",
    "qs": "^6.14.1",
    "@modelcontextprotocol/sdk": "^1.25.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,mts,cts}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  }
}
