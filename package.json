{
  "name": "researchly-bot",
  "version": "0.2.1",
  "private": true,
  "description": "AI-powered search application",
  "keywords": [
    "ai",
    "convex",
    "react",
    "search"
  ],
  "homepage": "https://researchly.fyi",
  "bugs": {
    "url": "https://github.com/WilliamAGH/researchly-bot/issues"
  },
  "license": "LICENSE.md",
  "author": "William Callahan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WilliamAGH/researchly-bot.git"
  },
  "type": "module",
  "scripts": {
    "validate:quick": "npm run -s lint:ox && tsc -p . --noEmit --pretty false && tsc -p convex --noEmit --pretty false && npm run -s test",
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite",
    "dev:frontend:test": "vite --strictPort --port 5173 --host 127.0.0.1",
    "dev:frontend:open": "vite --open",
    "dev:backend": "convex dev",
    "build": "vite build",
    "preview": "vite preview --strictPort --port 4173",
    "lint": "npm-run-all --sequential lint:ox lint:ox:typeaware lint:eslint",
    "lint:ox": "oxlint -c config/oxlintrc.json --import-plugin --nextjs-plugin --react-plugin --jsx-a11y-plugin --promise-plugin --vitest-plugin --react-perf-plugin .",
    "lint:ox:typeaware": "oxlint -c config/oxlintrc.json --type-aware .",
    "lint:eslint": "eslint .",
    "lint:fix": "oxlint --fix && eslint --fix",
    "typecheck": "tsc -p . --noEmit --pretty false && tsc -p convex --noEmit --pretty false",
    "format": "oxfmt -c config/oxfmtrc.json --write .",
    "format:check": "oxfmt -c config/oxfmtrc.json --check .",
    "validate": "npm-run-all --print-label --aggregate-output --parallel lint typecheck format:check lint:loc lint:convex-imports lint:convex-types lint:duplicates lint:boundaries --sequential test:single build",
    "clean": "rm -rf node_modules/.cache node_modules/.tmp dist .turbo && echo 'Cleaned build caches'",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json && echo 'Cleaned everything - run npm install'",
    "clean:vscode": "rm -rf ~/Library/Caches/typescript/* ~/Library/Application\\ Support/Code/Cache/* ~/Library/Application\\ Support/Code/CachedData/* 2>/dev/null || true && echo 'Cleaned VSCode caches - restart VSCode'",
    "test": "vitest run --config config/vitest.config.ts --reporter=dot --pool=forks",
    "test:vmforks": "vitest run --config config/vitest.config.ts --reporter=dot --pool=vmForks --poolOptions.vmForks.singleFork --coverage.enabled=false",
    "test:single": "vitest run --config config/vitest.config.ts --reporter=dot --pool=forks --poolOptions.forks.singleFork --coverage.enabled=false",
    "test:ci": "vitest run --config config/vitest.config.ts --reporter=dot --pool=vmForks --poolOptions.vmForks.singleFork",
    "test:watch": "vitest --config config/vitest.config.ts",
    "test:vitest": "vitest run --config config/vitest.config.ts",
    "postinstall": "npm run playwright:install",
    "playwright:install": "node scripts/install-playwright.mjs",
    "playwright:update": "npm run playwright:install",
    "test:playwright": "playwright test --config config/playwright.config.ts",
    "test:all": "npm-run-all --sequential test:vitest test:playwright",
    "test:chat": "vitest --config config/vitest.config.ts __tests__/src/lib/utils/chatValidation.test.ts",
    "test:integration:chat": "playwright test --config config/playwright-integration.config.ts --project=chromium __tests__/integration/chat-message-chaining.test.ts",
    "test:integration": "playwright test --config config/playwright-integration.config.ts",
    "test:integration:all": "PLAYWRIGHT_ALL_BROWSERS=1 playwright test --config config/playwright-integration.config.ts",
    "test:integration:ci": "CI=true playwright test --config config/playwright-integration.config.ts",
    "test:smoke": "playwright test --config config/playwright.config.ts -g smoke --reporter=line",
    "test:smoke:proxy": "PLAYWRIGHT_RUNTIME=proxy playwright test --config config/playwright.config.ts -g smoke --reporter=line",
    "prepare": "prek -c config/prek.toml install && node scripts/patch-hooks-verbose.mjs",
    "lint:convex-imports": "node scripts/check-convex-imports.cjs",
    "lint:loc": "node scripts/check-loc.mjs",
    "lint:convex-types": "node scripts/lint-convex-types.mjs",
    "lint:duplicates": "DRY_T=$(node -p \"require('./config/drylintrc.json').threshold\") && dry --no-cache --threshold $DRY_T --ignore 'node_modules/**' && dry --no-cache --threshold $DRY_T --ignore 'node_modules/**' --json --out /tmp/dry-lint.json --no-progress && node -e \"const fs = require('node:fs'); const g = JSON.parse(fs.readFileSync('/tmp/dry-lint.json', 'utf8')); if (g.length > 0) { console.error('[FAIL] ' + g.length + ' duplicate code group(s) exceed similarity threshold. See dry-lint output above.'); process.exit(1); } else { console.log('[OK] No code duplication above threshold'); }\"",
    "lint:duplicates:near": "dry --no-cache --threshold $(node -p \"require('./config/drylintrc.json').threshold\") --ignore 'node_modules/**'",
    "lint:boundaries": "ast-grep scan -c config/sgconfig.yml && echo 'No boundary violations found'",
    "playwright:install:firefox": "npx playwright install --with-deps firefox",
    "playwright:install:all": "npx playwright install --with-deps",
    "test:playwright:firefox": "PLAYWRIGHT_INCLUDE_FIREFOX=1 playwright test --config config/playwright.config.ts --project=firefox"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.80",
    "@headlessui/react": "^2.2.7",
    "@openai/agents": "^0.1.11",
    "@openai/agents-core": "0.1.11",
    "@openai/agents-openai": "0.1.11",
    "@tailwindcss/container-queries": "^0.1.1",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "convex": "^1.25.4",
    "lucide-react": "^0.539.0",
    "openai": "^5.12.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.12.0",
    "react-swipeable": "^7.0.2",
    "rehype-sanitize": "^6.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "3.3.0",
    "terser": "5.40.0",
    "uuidv7": "^1.0.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@ast-grep/cli": "^0.40.5",
    "@dry-lint/cli": "^3.0.0",
    "@dry-lint/typescript": "^3.0.0",
    "@dry-lint/zod": "^3.0.0",
    "@j178/prek": "^0.3.2",
    "@playwright/test": "1.56.1",
    "@testing-library/react": "^16.0.0",
    "@types/node": "24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "@vitejs/plugin-react": "4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "~10",
    "cli-progress": "^3.12.0",
    "convex-test": "^0.0.38",
    "dotenv": "16.5.0",
    "esbuild": "0.25.4",
    "eslint": "9.33.0",
    "glob": "^11.1.0",
    "globals": "^15.15.0",
    "jsdom": "^24.1.0",
    "lint-staged": "15.5.2",
    "npm-run-all": "^4.1.5",
    "oxfmt": "^0.27.0",
    "oxlint": "1.42.0",
    "oxlint-tsgolint": "^0.11.2",
    "postcss": "~8",
    "tailwindcss": "~3",
    "tsx": "^4.20.3",
    "typescript": "5.9.2",
    "vite": "6.4.1",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "hono": "^4.11.7",
    "qs": "^6.14.2",
    "undici": "^7.19.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,mts,cts}": [
      "oxlint -c config/oxlintrc.json --type-aware",
      "oxfmt -c config/oxfmtrc.json --write"
    ],
    "*.{css,md}": [
      "oxfmt -c config/oxfmtrc.json --write"
    ],
    "!(package-lock).json": [
      "oxfmt -c config/oxfmtrc.json --write"
    ],
    "*.toml": [
      "oxfmt -c config/oxfmtrc.json --write"
    ]
  },
  "engines": {
    "node": "22.17.0"
  }
}
