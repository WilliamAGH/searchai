{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "import",
    "typescript",
    "unicorn"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {},
  "rules": {
    "eqeqeq": "warn",
    "import/no-cycle": "error",
    "import/order": "off",
    "react/self-closing-comp": [
      "error",
      {
        "html": false
      }
    ]
  },
  "ignorePatterns": [
    "dist/**",
    "convex/_generated/**",
    "node_modules/**",
    "*.config.js",
    "*.config.ts"
  ],
  "overrides": [
    {
      "files": [
        "*.test.ts",
        "*.spec.ts"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ]
}