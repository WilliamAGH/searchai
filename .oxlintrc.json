{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "import",
    "typescript",
    "unicorn",
    "react",
    "jsx-a11y",
    "promise",
    "vitest",
    "react-perf",
    "oxc"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {},
  "rules": {
    "eqeqeq": "error",
    "no-eval": "error",
    "no-debugger": "error",
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }],

    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": true,
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrors": "all",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "no-unused-labels": "error",
    "no-unused-private-class-members": "error",
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true,
        "allowTernary": true,
        "allowTaggedTemplates": true
      }
    ],
    "no-unreachable": "error",
    "no-dead-code": "off",

    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": [
              "**/convexTypes",
              "**/convexTypes.ts",
              "**/convex-types",
              "**/types/convex"
            ],
            "message": "❌ NEVER create abstraction layers over Convex _generated types. Import directly from 'convex/_generated/' as per Convex best practices."
          },
          {
            "group": [
              "./lib/convexTypes",
              "../lib/convexTypes",
              "../../lib/convexTypes"
            ],
            "message": "❌ CRITICAL ERROR: Never import from convexTypes.ts! Use direct imports from '_generated' directory. See CLAUDE.md for correct patterns."
          },
          {
            "group": [
              "**/lib/convex*",
              "**/wrappers/convex*",
              "**/abstractions/convex*"
            ],
            "message": "❌ Do not create wrapper files for Convex types. The _generated directory IS the abstraction layer."
          }
        ]
      }
    ],

    "import/no-cycle": "error",
    "import/order": "off",
    "import/no-duplicates": "error",
    "import/no-unassigned-import": [
      "warn",
      {
        "allow": ["**/*.css", "**/*.scss", "**/*.less"]
      }
    ],
    "import/no-unused-modules": [
      "warn",
      {
        "unusedExports": true,
        "missingExports": false,
        "ignoreExports": ["*.config.ts", "*.config.js", "*.d.ts"]
      }
    ],
    "import/no-self-import": "error",
    "import/no-empty-named-blocks": "error",

    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-non-null-assertion": "warn",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": true,
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-unnecessary-type-constraint": "error",
    "@typescript-eslint/no-unnecessary-parameter-property-assignment": "error",
    "@typescript-eslint/no-useless-empty-export": "error",
    "@typescript-eslint/no-import-type-side-effects": "error",
    "@typescript-eslint/consistent-type-imports": [
      "error",
      {
        "prefer": "type-imports",
        "disallowTypeAnnotations": true,
        "fixStyle": "separate-type-imports"
      }
    ],
    "@typescript-eslint/no-empty-object-type": "warn",
    "@typescript-eslint/no-wrapper-object-types": "error",

    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "react/self-closing-comp": [
      "error",
      {
        "html": false
      }
    ],
    "react/jsx-no-target-blank": "error",
    "react/jsx-key": "error",

    "react-perf/jsx-no-new-function-as-prop": "off",
    "react-perf/jsx-no-new-array-as-prop": "off",
    "react-perf/jsx-no-new-object-as-prop": "off",

    "jsx-a11y/anchor-is-valid": "warn",
    "jsx-a11y/alt-text": "error",
    "jsx-a11y/no-aria-hidden-on-focusable": "error",

    "promise/no-return-await": "error",
    "promise/catch-or-return": "warn",

    "unicorn/no-array-reduce": "warn",
    "unicorn/prefer-node-protocol": "warn",
    "unicorn/no-useless-undefined": "error",
    "unicorn/no-useless-length-check": "error",
    "unicorn/no-useless-spread": "error",
    "unicorn/no-empty-file": "warn",

    "oxc/bad-array-method-on-arguments": "error",
    "oxc/bad-replace-all-arg": "error",
    "oxc/number-arg-out-of-range": "error",
    "oxc/uninvoked-array-callback": "error",
    "oxc/only-used-in-recursion": "warn",

    "array-callback-return": [
      "error",
      {
        "allowImplicit": false,
        "checkForEach": false
      }
    ],
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "no-empty-function": [
      "warn",
      {
        "allow": ["arrowFunctions", "constructors"]
      }
    ],
    "no-empty-pattern": "error",
    "no-useless-call": "error",
    "no-useless-concat": "error",
    "no-useless-rename": "error",
    "no-useless-return": "error",
    "no-constant-condition": "error",
    "no-dupe-else-if": "error",
    "no-duplicate-case": "error",
    "no-lonely-if": "warn",
    "no-return-assign": "error",
    "no-unneeded-ternary": "warn",
    "default-param-last": "error",
    "prefer-rest-params": "error",
    "prefer-spread": "error"
  },
  "ignorePatterns": [
    "dist/**",
    "convex/_generated/**",
    "node_modules/**",
    "playwright-report/**",
    "*.config.js",
    "*.config.ts"
  ],
  "overrides": [
    {
      "files": [
        "*.test.ts",
        "*.spec.ts",
        "*.test.tsx",
        "*.spec.tsx",
        "tests/**/*",
        "scripts/**/*"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "no-console": "off",
        "unicorn/prefer-node-protocol": "off"
      }
    },
    {
      "files": ["convex/**/*.ts"],
      "rules": {
        "no-console": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-non-null-assertion": "off",
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["./lib/convexTypes", "../lib/convexTypes"],
                "message": "❌ In Convex backend files, import from './_generated/' not from wrapper files"
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["src/**/*.ts", "src/**/*.tsx"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["**/convex/lib/convexTypes", "**/convexTypes"],
                "message": "❌ In frontend files, import from 'convex/_generated/' not from wrapper files"
              }
            ]
          }
        ]
      }
    }
  ]
}
